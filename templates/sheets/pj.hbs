<form autocomplete="off">
  {{!log "pj" this}}
  <section class="sheet-body pj-sheet">
    <header class="pj-header">
      <div class="pj-portrait">
      {{#if unlocked}}
          <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
      {{else if (ne actor.img "icons/svg/mystery-man.svg")}}
            <img src="{{actor.img}}" title="{{actor.name}}" />
      {{/if}}
      </div>
      <div class="charname">
        <input name="name" type="text" value="{{actor.name}}" />
      </div>
        <div class="change-lock" title="{{localize 'MAGNA.LABEL.unlockSheet'}}">
          {{#if unlocked}}<i class="fas fa-lock-open"></i>{{else}}<i class="fas fa-lock" ></i>{{/if}}
      </div>
        <div class="change-aura" title="{{localize 'MAGNA.LABEL.deployerAura'}}">
            {{#if auradeployee}}<i class="fa-solid fa-person-rays"></i>{{else}}<i class="fas fa-person roll-carac" data-group="aura" data-field="{{auradeployee}}"></i>{{/if}}
        </div>
      <div class="bloc_stats" style="grid-row: 1/2;grid-column: 4/5;">
        <div class="nom_stat">
          Vitalité
        </div>
        <div class="val_stats">
          <input type="number" name="system.vitalite.valeur" value="{{actor.system.vitalite.valeur}}" /> / 
        </div>
        <div class="val_stats">
          {{vitalite_max}}
        </div>
      </div>
      <div class="bloc_stats" style="grid-row: 2/3;grid-column: 4/5;">
        <div class="nom_stat">
          Mental
          <a class="icon_caracteristique">
          <i class="fas fa-dice roll-carac" data-group="mental"></i>
          </a>
        </div>
        <div class="val_stats">
          <input type="number" name="system.mental.valeur" value="{{actor.system.mental.valeur}}" /> / 
        </div>
        <div class="val_stats">
          {{mental_max}}
        </div>
      </div>
      <div class="bloc_stats" style="grid-row: 3/4; grid-column:4/5">
        <div class="nom_stat">
          PEX
        </div>
        <div class="val_stats">
          <input type="number" name="system.pex.valeur" value="{{actor.system.pex.valeur}}" /> / 
        </div>
        <div class="val_stats">
          <input type="number" name="system.pex.total" value="{{actor.system.pex.total}}" />
        </div>
      </div>
    </header>
    <div class="sheet-cont">
      {{! Sheet Navigation }}
      <nav class="sheet-navigation tabs" data-group="primary">
        <a class="choix_tab" data-tab="competences"><i class="fa-solid fa-chart-simple"></i></a>
        <a class="choix_tab" data-tab="pouvoirs"><i class="fa-solid fa-bolt"></i></a>
        <a class="choix_tab" data-tab="description"><i class="fa-regular fa-clipboard"></i></a>
      </nav>

      {{! Détails Tab }}
      <div class="tab tab-competences flexcol" data-group="primary" data-tab="competences">
          {{> "systems/magna/templates/sheets/partials/pj-competences.hbs"}}
      </div>

      {{! pouvoirs Tab }}
      <div class="tab tab-pouvoirs flexcol" data-group="primary" data-tab="pouvoirs">
          {{> "systems/magna/templates/sheets/partials/pj-pouvoirs.hbs"}}
      </div>

      {{! Notes Tab }}
      <div class="tab tab-desc flexcol" data-group="primary" data-tab="description">
        {{> "systems/magna/templates/sheets/partials/pj-description.hbs"}}
      </div>
    </div>
  </section>
</form>