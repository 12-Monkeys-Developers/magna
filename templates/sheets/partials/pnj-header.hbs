<header class="pj-header">
  {{! Sheet Navigation }}
  {{#if unlocked}}
  <nav class="sheet-navigation tabs tablist" data-group="primary">
    <a class="choix_tab" data-tab="competences"><i class="fa-solid fa-chart-simple"></i></a>
    <a class="choix_tab" data-tab="pouvoirs"><i class="fa-solid fa-bolt"></i></a>
    <a class="choix_tab" data-tab="description"><i class="fa-regular fa-clipboard"></i></a>
  </nav>
  {{/if}}
    <div class="change-lock" title="{{localize 'MAGNA.LABEL.unlockSheet'}}">
      <a>{{#if unlocked}}<i class="fas fa-lock-open"></i>{{else}}<i class="fas fa-lock" ></i>{{/if}}</a>
  </div>
  <div class="pj-portrait">
  {{#if unlocked}}
      <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
  {{else if (ne actor.img "icons/svg/mystery-man.svg")}}
        <img src="{{actor.img}}" title="{{actor.name}}" />
  {{/if}}
  </div>
  <div class="charname">
    <input name="name" type="text" value="{{actor.name}}" />
  </div>
    <div class="aura" title="{{localize 'MAGNA.LABEL.deployerAura'}}">
        {{#if nbAuraDeployees}}<i class="fa-solid fa-person-rays"></i>{{else}}<i class="fas fa-person"></i>{{/if}}
      <div class="val_stats" style="margin:5px;">
        : {{nbAuraDeployees}}
      </div>
    </div>
  <div class="bloc_stats" style="grid-row: 1/2;grid-column: 4/5;">
    <div class="nom_stat">
      Vitalit√©
    </div>
    <div class="val_stats">
      <input type="number" name="system.vitalite.valeur" value="{{actor.system.vitalite.valeur}}" /> / 
    </div>
    <div class="val_stats">
      {{vitalite_max}}
    </div>
  </div>
  <div class="bloc_stats std-contextmenu" style="grid-row: 2/3;grid-column: 4/5;" data-cond="mental">
    <div class="nom_stat">
      Mental
    </div>
    <div class="val_stats">
      <input type="number" name="system.mental.valeur" value="{{actor.system.mental.valeur}}" /> / 
    </div>
    <div class="val_stats">
      {{mental_max}}
    </div>
  </div>
</header>